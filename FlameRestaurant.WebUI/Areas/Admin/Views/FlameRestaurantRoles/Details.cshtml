@model FlameRestaurantRole

@{
    ViewData["Title"] = "Details";
}

<h2>Detallı</h2>

<div class="page-wrapper">
    <div class="page-header">
        <div class="row align-items-end">
            <div class="col-lg-8">
                <div class="page-header-title">
                    <div class="d-inline">
                        <h4>Bootstrap Border Sizes</h4>
                        <span>
                            lorem ipsum dolor sit amet, consectetur adipisicing
                            elit
                        </span>
                    </div>
                </div>
            </div>
            <div class="col-lg-4">
                <div class="page-header-breadcrumb">
                    <ul class="breadcrumb-title">
                        <li class="breadcrumb-item" style="float: left;">
                            <a asp-controller="Dashboard" asp-action="index"> <i class="feather icon-home"></i> </a>
                        </li>
                        @if (User.HasAccess("admin.flamerestaurantroles.index"))
                        {
                            <li class="breadcrumb-item" style="float: left;">
                                <a asp-action="index">Roollar</a>
                            </li>
                        }
                        <li class="breadcrumb-item" style="float: left;">
                            <span>Detallı</span>
                        </li>
                    </ul>
                </div>
            </div>
        </div>
    </div>
    <div class="page-body">
        <div class="row">
            <div class="col-sm-12">
                <div class="card">
                    <div class="card-header">
                        <h5>Basic Form Inputs</h5>
                        <span>
                            Add class of <code>.form-control</code> with
                            <code>&lt;input&gt;</code> tag
                        </span>


                        <div class="card-header-right">
                            <i class="icofont icofont-spinner-alt-5"></i>
                        </div>

                    </div>
                    <div class="card-block">
                        <h4 class="sub-title">Basic Inputs</h4>

                        <div>
                            <div class="form-group row">
                                <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                                <p class="fix-row">
                                    @Model.Name
                                </p>
                            </div>

                            <div class="form-group row">
                                <label asp-for="NormalizedName" class="col-sm-2 col-form-label"></label>
                                <div class="fix-row">
                                    @Html.Raw(Model.NormalizedName);
                                </div>
                            </div>
                            <div class="form-group row">
                                <label asp-for="ConcurrencyStamp" class="col-sm-2 col-form-label"></label>
                                <div class="fix-row">
                                    @Html.Raw(Model.ConcurrencyStamp);
                                </div>
                            </div>

                            <div class="form-group row">
                                <div class="col-12 d-flex justify-content-end">
                                    @if (User.HasAccess("admin.flamerestaurantroles.edit"))
                                    {
                                        <a asp-action="edit" name="" asp-route-id=@Model.Id class="btn btn-warning mr-2 fix-btn">Edit</a>
                                    }

                                    @if (User.HasAccess("admin.flamerestaurantroles.index"))
                                    {
                                        <a asp-action="index" class="btn btn-info">Cancel</a>

                                    }
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
