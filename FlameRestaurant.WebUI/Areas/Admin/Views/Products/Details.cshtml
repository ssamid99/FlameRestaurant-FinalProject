@model Product

@{
    ViewData["Title"] = "Edit";
}

<div class="page-header">
    <div class="row align-items-end">
        <div class="col-lg-8">
            <div class="page-header-title">
                <div class="d-inline">
                    <h4>Details</h4>
                </div>
            </div>
        </div>
        <div class="col-lg-4">
            <div class="page-header-breadcrumb">
                <ul class="breadcrumb-title">
                    <li class="breadcrumb-item">
                        <a asp-controller="Home" asp-action="index">
                            <i class="feather icon-home"></i>
                        </a>
                    </li>
                    <li class="breadcrumb-item">
                        <a asp-action="index">Products</a>
                    </li>
                    <li class="breadcrumb-item">
                        <span>@Model.Name</span>
                    </li>
                </ul>
            </div>
        </div>
    </div>
</div>

<div class="page-body">
    <div class="card">
        <div class="card-block">
            <div>
                <div class="form-group row">
                    <label asp-for="Name" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.Name
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="StockKeepingUnit" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.StockKeepingUnit
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Image</label>
                    <div class="col-sm-10">
                        <label class="image-viewer" style="background-image:url(/uploads/images/@Model.ImagePath)"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Description" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <div>
                            @Html.Raw(Model.Description)
                        </div>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="ReceipeDescription" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.ReceipeDescription
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Price" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.Price
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label asp-for="Category" class="col-sm-2 col-form-label"></label>
                    <div class="col-sm-10">
                        <p class="form-control">
                            @Model.Category.Name
                        </p>
                    </div>
                </div>
                <div class="form-group row">
                    <label class="col-sm-2 col-form-label">Tags</label>
                    <div class="col-sm-10">
                        @foreach (var tag in Model.TagCloud.Select(tc => tc.Tag))
                        {
                            <span class="badge badge-info">@tag.Text</span>
                        }
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-12 d-flex justify-content-end">
                        @if (User.HasAccess("admin.products.edit"))
                        {
                            <a asp-action="edit" asp-route-id="@Model.Id" class="btn btn-warning mr-2">Edit</a>
                        }
                        <a asp-action="index" class="btn btn-info">Cancel</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>