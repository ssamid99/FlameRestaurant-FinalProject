@model FlameRestaurantForgotPassword
@{
    ViewData["Title"] = "ForgotPassword";
}

    <div class="login-bg">
      
      <section class="vh-100">
  <div class="container py-5 h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col col-xl-7">
        <div class="card" style="border-radius: 1rem;">
          <div class="row g-0">
            <div class="col-lg-12 col-lg-7 d-flex align-items-center">
              <div class="card-body p-4 p-lg-5 text-black">
                <form method="post" asp-controller="account" asp-action="forgotpassword">
                    <div asp-validation-summary="All"></div>
                  <div style="width: 100%; height: 110px;" class="d-flex justify-content-center align-items-center mb-2 pb-1">
                      <img style="width: 160px;" src="~/images/logo copy2.png" alt="">
                  </div>

                  <h5 class="fw-normal mb-3 pb-3" style="letter-spacing: 1px;">Forgot password</h5>

                  <div class="form-outline mb-3">
                      <span asp-validation-for="Email"></span>
                    <input type="email" asp-for="Email" id="form2Example17" class="form-control form-control-lg" />
                    <label class="form-label" for="form2Example17">Email address</label>
                  </div>

                  <div class="pt-1 mb-3">
                    <button class="btn btn-dark btn-lg btn-block" type="submit">Send to Email</button>
                  </div>
                  </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>

    </div>

